<h2>Add a new Director</h2>

<%= form_with model: @director do | f |%>
  <%= f.label 'Name' %>
  <%= f.text_field :name %>

  <%= f.label 'Nationality' %>
  <%= f.text_field :nationality %>

  <%= f.label 'Date of Birth' %>
  <%= f.date_field :dob %>

  <%= f.label 'Favourite Genre' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>


  <%= f.submit 'Submit' %>
<% end %>