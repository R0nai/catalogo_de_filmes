<%= form_with model: film do | f |%>
  
  <div>
    <%= f.label 'Title' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label 'Country' %>
    <%= f.text_field :country %>
  </div>
  <div>
    <%= f.label 'Year' %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label 'Duration' %>
    <%= f.number_field :duration %>
  </div>
  <div>
    <%= f.label 'Synopsis' %>
    <%= f.text_area :synopsis %>
  </div>
  <div>
    <%= f.label 'Genre' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div>
    <%= f.label 'Director' %>
    <%= f.collection_select :director_id, Director.all, :id, :name %>
  </div>
  <div>
    <%= f.label 'Status' %>
    <%= f.select :status, Film.statuses.keys.map {|status| [status.capitalize, status]} %>
  </div>
  <div>
    <%= f.submit 'Submit' %>
  </div>
  
<% end %>