<h2>Films</h2>
<div>
  <%= link_to "Add a new Film", new_film_path%>
</div>

<% @films.each do |film|%>
  <div>
    <%= image_tag(film.image, width: "200" , height: "300")%>
    <br>
    <%= link_to "#{film.title} #{film.year} - #{film.status.capitalize}", film%>
  </div>
  
  
<% end %>

<a href="/">Back Home</a>